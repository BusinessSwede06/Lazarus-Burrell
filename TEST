class Character:
    def __init__(self, name, id_number):
        self.__name = name
        self.__id_number = id_number

    def set_name(self, name):
        self.__name = name

    def set_id_number(self, id_number):
        self.__id_number = id_number

    def get_name(self):
        return self.__name

    def get_id_number(self):
        return self.__id_number
#define hero
class Hero(Character):
    def __init__(self, name, id_number, level, loot):
        Character.__init__(self, name, id_number)

        self.__level = level
        self.__loot = loot

#Adding mutators to level and loot
    def set_level(self, level):
        self.__level = level

    def set_loot(self, __loot):
        return self.__loot
#moar functions
    def get_level(self):
        return self.__level

    def get_loot(self):
        return self.__loot

#define boss
